# Sentry (Error Tracking)
SENTRY_LARAVEL_DSN=
SENTRY_RELEASE=
SENTRY_TRACES_SAMPLE_RATE=0.0

# Application Settings
APP_NAME="Billing-Panel"
APP_ENV=production
APP_DEBUG=false
APP_KEY=
APP_URL=https://billing.example.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=billing
DB_USERNAME=billing
DB_PASSWORD=ChangeThisToAStrongPassword1234
DB_SOCKET=

# Cache & Session Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_COOKIE=bp_session
SESSION_SECURE_COOKIES=true
CACHE_PREFIX=

# Queue Configuration
QUEUE_CONNECTION=sync
QUEUE_FAILED_DRIVER=database
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_QUEUE=default

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@billing.example.com
MAIL_FROM_NAME="Billing Panel"
MAIL_SCHEME=
MAIL_URL=
MAIL_EHLO_DOMAIN=

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null
LOG_SLACK_WEBHOOK_URL=

# Third Party Services
POSTMARK_API_KEY=
RESEND_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Monitoring token for protected health endpoints
MONITORING_TOKEN=

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Notification Settings
DISCORD_NOTIFICATIONS_ENABLED=false
DISCORD_WEBHOOK_URL=
EMAIL_NOTIFICATIONS_ENABLED=true
ADMIN_EMAILS=admin@example.com
SLACK_NOTIFICATIONS_ENABLED=false
SLACK_WEBHOOK_URL=
NOTIFY_JOB_FAILURES=true
INCLUDE_JOB_FAILURE_DETAILS=true

# Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT=60
API_RATE_LIMIT_DECAY=1
WEBHOOK_RATE_LIMIT_ENABLED=true
WEBHOOK_RATE_LIMIT=100
WEBHOOK_RATE_LIMIT_DECAY=1
LOGIN_RATE_LIMIT=5
LOGIN_RATE_LIMIT_DECAY=15
REGISTER_RATE_LIMIT=3
REGISTER_RATE_LIMIT_DECAY=60

# Filesystem
FILESYSTEM_DISK=local

# Security
SUPER_ADMIN_EMAIL=admin@example.com
