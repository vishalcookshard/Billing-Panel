APP_NAME="Billing-Panel"
APP_ENV=production
APP_DEBUG=false
APP_KEY=
APP_URL=https://billing.example.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=billing
DB_USERNAME=root
DB_PASSWORD=
# Set a strong DB_PASSWORD in production (min 16 chars). Leave empty here to force manual setup

# Cache & Session Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# Queue Configuration
QUEUE_CONNECTION=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Mail Configuration
MAIL_MAILER=log
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@billing.example.com
MAIL_FROM_NAME="Billing Panel"

# Third Party Services
# Monitoring token for protected health endpoints
MONITORING_TOKEN=

DISCORD_WEBHOOK_URL=
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Application Settings
LOG_CHANNEL=stack
LOG_LEVEL=info
